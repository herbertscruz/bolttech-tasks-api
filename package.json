{
  "name": "bolttech-tasks-api",
  "version": "1.0.0",
  "description": "This is a multi-user task manager API by Bolttech.",
  "main": "src/server.ts",
  "scripts": {
    "start": "cross-env DEBUG=bolttech:infrastructure:http:express:express:adapter ts-node src/server.ts",
    "dev": "cross-env DEBUG=bolttech:* ts-node-dev src/server.ts",
    "test": "jest --passWithNoTests --group=unit/test",
    "test:integration": "jest --passWithNoTests --group=integration/test",
    "lint": "eslint . --cache --fix --max-warnings 10 --ext .ts",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "prebuild": "shx rm -rf dist",
    "build": "tsc -p . && shx cp src/configurations/open-api.yaml dist/src/configurations/open-api.yaml",
    "typeorm": "npx typeorm-ts-node-esm",
    "db:migration:create": "npm run typeorm -- migration:create",
    "db:migration:run": "npm run typeorm -- migration:run -d src/infrastructure/database/typeorm/datasource.config.ts",
    "db:migration:revert": "npm run typeorm -- migration:revert -d src/infrastructure/database/typeorm/datasource.config.ts",
    "db:seed": "cross-env DEBUG=bolttech:infrastructure:database:typeorm:* ts-node src/infrastructure/database/typeorm/seed.ts",
    "generate:token": "cross-env DEBUG=bolttech:script:generate:token ts-node scripts/generate-token.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/herbertscruz/bolttech-tasks-api.git"
  },
  "keywords": [],
  "author": "Herberts Cruz <herbertscruz@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/herbertscruz/bolttech-tasks-api/issues"
  },
  "homepage": "https://github.com/herbertscruz/bolttech-tasks-api#readme",
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-decorators": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.3.0",
    "@types/crypto-js": "^4.1.1",
    "@types/debug": "^4.1.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.1",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-extended": "^3.0.1",
    "jest-runner-groups": "^2.2.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-openapi-validator": "^4.13.8",
    "http-status-codes": "^2.2.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.7",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run prettier",
      "npm run test",
      "git add ."
    ]
  }
}
